{
  "builders": [
    {
      "name": "vagrant",
      "type": "virtualbox-iso",
      "boot_command": [
        "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/ks.cfg<enter><wait>"
      ],
      "boot_wait": "10s",
      "disk_size": 81920,
      "guest_os_type": "RedHat_64",
      "headless": true,
      "http_directory": "http",
      "iso_urls": [
        "http://mirror.fysik.dtu.dk/linux/centos/7.6.1810/isos/x86_64/CentOS-7-x86_64-Minimal-1810.iso",
        "CentOS-7-x86_64-Minimal-1810.iso"
      ],
      "iso_checksum": "5833cb3189a61c02abf50fb8c2db16cfa669bc3c",
      "iso_checksum_type": "sha1",
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "ssh_port": 22,
      "ssh_wait_timeout": "10000s",
      "shutdown_command": "echo 'vagrant'|sudo -S /sbin/halt -h -p",
      "guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",
      "virtualbox_version_file": ".vbox_version",
      "vm_name": "centos-7-x86_64",
      "vboxmanage": [
        [
          "modifyvm",
          "{{.Name}}",
          "--memory",
          "512"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--cpus",
          "2"
        ]
      ]
    },
    {
      "name": "docker",
      "type": "docker",
      "image": "centos:7.6.1810",
      "commit": true
    }
  ],
  "post-processors": [
    {
      "output": "builds/{{.Provider}}-centos7.box",
      "type": "vagrant",
      "only": [
        "vagrant"
      ]
    },
    {
      "type": "docker-tag",
      "repository": "localgod/centos",
      "tag": "7.6.1810",
      "only": [
        "docker"
      ]
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "override": {
        "vagrant": {
          "execute_command": "echo 'vagrant'|sudo -S sh '{{.Path}}'",
          "scripts": [
            "base.sh",
            "vbox.sh",
            "vagrant.sh",
            "cleanup.sh"
          ]
        },
        "docker": {
          "execute_command": "echo 'packer'| sh '{{.Path}}'",
          "scripts": [
            "base.sh",
            "cleanup.sh"
          ]
        }
      }
    }
  ]
}
